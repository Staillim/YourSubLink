rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
    }

    match /links/{linkId} {
      // ANYONE can query the links collection to find the destination URL.
      // This is essential for the link redirection to work for public users.
      allow list: if true;

      // ANYONE can read a single link document if they have the direct ID.
      // This is also required for redirection.
      allow get: if true;
      
      // LOGGED-IN users can create links.
      allow create: if request.auth.uid != null;
      
      // LOGGED-IN users can update/delete their OWN links. Admins have full write access.
      allow update, delete: if (request.auth.uid == resource.data.userId) || isAdmin();

      // Admins have full read/write access.
      allow read, write: if isAdmin();
    }
    
    match /clicks/{clickId} {
        // ANYONE can create a click document. This is done client-side.
        allow create: if true;
        allow list, get: if isAdmin();
    }

    match /payoutRequests/{requestId} {
        // Users can create and read their own requests.
        allow create: if request.auth.uid == request.resource.data.userId;
        allow read: if (request.auth.uid == resource.data.userId) || isAdmin();
        // Admins can manage all requests.
        allow write: if isAdmin();
        allow list: if isAdmin(); // Allow admins to list all requests.
    }

    match /cpmHistory/{cpmId} {
        // Authenticated users can read CPM data.
        allow read: if request.auth.uid != null;
        allow list: if request.auth.uid != null;
        // Only admins can write to CPM history.
        allow write: if isAdmin();
    }

    match /notifications/{notificationId} {
        // Users can read their own notifications. Admins can read all.
        allow read: if (request.auth.uid == resource.data.userId) || isAdmin();
        // Admins can list all notifications for the notification bell.
        allow list: if isAdmin();
        // System can create notifications.
        allow create: if true;
    }
  }
}
