
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USERS Collection
    match /users/{userId} {
      // Allow anyone to read a single user document. This is required for the /clicks rule to check accountStatus.
      allow get: if true;
      // Allow authenticated users to list their own data, and admins to list all users.
      allow list: if isOwner(userId) || isAdmin();
      // Only the owner or an admin can update a profile.
      allow update: if isOwner(userId) || isAdmin();
      // Only admins can create or delete users through the rules.
      allow create, delete: if isAdmin();
    }

    // LINKS Collection
    match /links/{linkId} {
      // Allow anyone to read a link document. This is required for the link page to load.
      allow read: if true;
      // Only authenticated users can create their own links.
      allow create: if isOwner(request.resource.data.userId);
      // Only the owner or an admin can update a link.
      allow update: if isOwner(get(/databases/$(database)/documents/links/$(linkId)).data.userId) || isAdmin();
      // Only the owner or an admin can delete a link.
      allow delete: if isOwner(get(/databases/$(database)/documents/links/$(linkId)).data.userId) || isAdmin();
    }

    // CLICKS Collection
    match /clicks/{clickId} {
      // Anyone can create a click log, but only if the link's owner is not suspended.
      // This rule requires `allow get: if true;` on the /users collection to work for anonymous users.
      allow create: if get(/databases/$(database)/documents/users/$(request.resource.data.userId)).data.accountStatus != 'suspended';

      // No one can read, update, or delete click logs from the client. Admins will use backend functions.
      allow read, update, delete: if false;
    }

    // PAYOUT REQUESTS Collection
    match /payoutRequests/{payoutId} {
      // Users can list and read their own payout requests.
      allow read, list: if isOwner(resource.data.userId);
      // Users can create their own payout requests.
      allow create: if isOwner(request.resource.data.userId);
      // Admins can read and update any payout request.
      allow get, update: if isAdmin();
      // No one can delete payout requests from the client.
      allow delete: if false;
    }

    // NOTIFICATIONS Collection
    match /notifications/{notificationId} {
      // Users can read their own notifications.
      allow read, list: if isOwner(resource.data.userId);
      // Admins can manage all notifications.
      allow get, write: if isAdmin();
      // Users cannot create, update, or delete notifications directly.
      allow create, update, delete: if false;
    }

    // SUPPORT TICKETS Collection
    match /supportTickets/{ticketId} {
      // Users can manage their own tickets.
      allow read, write: if isOwner(resource.data.userId);
      // Admins can manage any ticket.
      allow get, list, write: if isAdmin();
      
      match /messages/{messageId} {
        // Users can write messages to their own tickets.
        allow create: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
        // Only ticket owner and admins can read messages.
        allow read: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
      }
    }
    
    // CPM HISTORY Collection
    match /cpmHistory/{historyId} {
      // Only admins can read or write to the CPM history.
      allow read, write: if isAdmin();
    }
  }
}
