rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /links/{linkId} {
      // Allow anyone to read the link document for redirection
      allow get: if true;
      // Allow anyone to update the click count
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks']);
      // Allow authenticated users to create their own links
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow authenticated users to delete their own links
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow authenticated users to read their own links
      allow list: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}