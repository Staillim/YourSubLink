
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ================================
    // Funciones Helpers
    // ================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ================================
    // LINKS
    // ================================
    match /links/{linkId} {
      // ✅ Allow anyone to query for a link by shortId
      allow list: if request.query.whereField == 'shortId' && request.query.limit <= 1;
      
      // ✅ Allow any authenticated user to get a link by its full ID
      allow get: if isAuthenticated();

      // ✅ Only the owner can create, update, or delete their own links
      allow create, update, delete: if isOwner(request.resource.data.userId);
    }

    // ================================
    // CLICKS (Visits)
    // ================================
    match /clicks/{clickId} {
      // ✅ Anyone can create a click if the user's account is active
      allow create: if get(/databases/$(database)/documents/users/$(request.resource.data.userId)).data.accountStatus != 'suspended';

      // ❌ No one can read, update, or delete individual click documents directly
      allow read, update, delete: if false;
    }

    // ================================
    // USERS
    // ================================
    match /users/{userId} {
      // ✅ Anyone can read a user's public profile (to check status)
      allow get: if true;

      // ✅ A user can write to their own document
      allow write: if isOwner(userId);

      // ✅ Admins can write to any user document
      allow write: if isAdmin();
    }

    // ================================
    // NOTIFICATIONS
    // ================================
    match /notifications/{notificationId} {
      // ✅ Users can read and write to their own notifications
      allow read, write: if isOwner(resource.data.userId);
    }

    // ================================
    // CPM HISTORY
    // ================================
    match /cpmHistory/{historyId} {
      // ✅ Authenticated users can read CPM history
      allow read: if isAuthenticated();
      
      // ✅ Only admins can create/update CPM history
      allow write: if isAdmin();
    }

    // ================================
    // PAYOUT REQUESTS
    // ================================
    match /payoutRequests/{requestId} {
      // ✅ Users can read their own requests, and admins can read any
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // ✅ Users can list their own requests
      allow list: if isOwner(request.query.resource.data.userId);

      // ✅ Users can create their own requests
      allow create: if isOwner(request.resource.data.userId);

      // ✅ Only admins can approve/reject requests
      allow update: if isAdmin();
    }

    // ================================
    // SUPPORT TICKETS
    // ================================
    match /supportTickets/{ticketId} {
      // ✅ Owners and admins can interact with tickets
      allow read, create, update: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isOwner(request.query.resource.data.userId) || isAdmin();

      // Subcollection for messages
      match /messages/{messageId} {
        allow read, create: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
        allow list: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
      }
    }
    
    // ======================================
    // ADMIN LIST PERMISSIONS
    // ======================================
    // Grant admins list access to top-level collections needed for their dashboards
    match /users/{userId} {
        allow list: if isAdmin();
    }
     match /links/{linkId} {
        allow list: if isAdmin();
    }
     match /payoutRequests/{requestId} {
        allow list: if isAdmin();
    }
     match /cpmHistory/{historyId} {
        allow list: if isAdmin();
    }
     match /supportTickets/{ticketId} {
        allow list: if isAdmin();
    }
     match /clicks/{clickId} {
        allow list: if isAdmin();
    }

  }
}
