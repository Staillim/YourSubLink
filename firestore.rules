
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ================================
    // Funciones Helpers
    // ================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ================================
    // LINKS
    // ================================
    match /links/{linkId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isOwner(request.resource.data.userId);
    }

    // ================================
    // CLICKS (visitas)
    // ================================
    match /clicks/{clickId} {
      allow create: if get(/databases/$(database)/documents/users/$(get(/databases/$(database)/documents/links/$(request.resource.data.linkId)).data.userId)).data.accountStatus != 'suspended';
      allow read, update, delete: if false;
    }

    // ================================
    // USERS
    // ================================
    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // ================================
    // NOTIFICACIONES
    // ================================
    match /notifications/{notificationId} {
      allow list, read, write: if isOwner(request.resource.data.userId);
    }

    // ================================
    // HISTORIAL DE CPM
    // ================================
    match /cpmHistory/{historyId} {
      allow list, read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ================================
    // SOLICITUDES DE PAGO
    // ================================
    match /payoutRequests/{requestId} {
      allow list, read: if isOwner(request.resource.data.userId) || isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isAdmin();
    }

    // ================================
    // TICKETS DE SOPORTE
    // ================================
    match /supportTickets/{ticketId} {
      allow list, read, create, update: if isOwner(request.resource.data.userId) || isAdmin();

      match /messages/{messageId} {
        allow list, read, create: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
      }
    }
  }
}
