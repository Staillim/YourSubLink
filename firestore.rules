rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ================================
    // Funciones Helpers
    // ================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ================================
    // Colecciones Principales
    // ================================

    match /users/{userId} {
      // Cualquiera puede leer datos de perfil no sensibles
      allow get: if true;
      // Solo el dueño o un admin pueden escribir
      allow write: if isOwner(userId) || isAdmin();
      // Solo los admins pueden listar usuarios
      allow list: if isAdmin();
    }

    match /links/{linkId} {
        // Cualquiera puede leer un enlace (necesario para la LinkGate)
        allow get: if true;
        // Solo el dueño del enlace o un admin pueden escribir
        allow write: if isOwner(resource.data.userId) || isAdmin();

        // Cualquiera puede consultar la lista de enlaces por shortId
        allow list: if request.query.whereField == 'shortId' && request.query.limit <= 1;
    }

    match /clicks/{clickId} {
        // Cualquiera puede crear un click si el enlace existe y el dueño no está suspendido
        allow create: if get(/databases/$(database)/documents/users/$(get(/databases/$(database)/documents/links/$(request.resource.data.linkId)).data.userId)).data.accountStatus != 'suspended';
        // Solo los admins pueden leer la colección de clicks
        allow read, update, delete: if isAdmin();
        allow list: if isAdmin();
    }
    
    match /cpmHistory/{historyId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
        allow list: if isAdmin();
    }

    match /payoutRequests/{requestId} {
        allow create: if isOwner(request.resource.data.userId);
        allow read: if isOwner(resource.data.userId) || isAdmin();
        allow update: if isAdmin();
        allow list: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, write: if isOwner(resource.data.userId) || isAdmin();
        allow list: if isOwner(request.resource.data.userId) || isAdmin();
    }

    match /supportTickets/{ticketId} {
      allow read, create, update: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isOwner(request.resource.data.userId) || isAdmin();

      match /messages/{messageId} {
        allow read, create: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
      }
    }
  }
}
