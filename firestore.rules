rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    match /links/{linkId} {
      allow read: if true; // Allows anyone to read link data, which is necessary for the link redirection page to work.
      allow list: if request.auth != null && (isAdmin() || request.query.where[0][2] == request.auth.uid);
      allow create, update, delete: if request.auth != null && (isOwner(request.resource.data.userId) || isAdmin());
    }

    match /clicks/{clickId} {
      allow create: if get(/databases/$(database)/documents/users/$(request.resource.data.userId)).data.accountStatus != 'suspended';
      allow read, list: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
    }

    match /payoutRequests/{payoutId} {
      allow read, list: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
      allow update: if request.auth != null && isAdmin();
    }
    
    match /cpmHistory/{cpmId} {
        allow read, list: if request.auth != null;
        allow create, update: if request.auth != null && isAdmin();
    }

    match /notifications/{notificationId} {
      allow read, list, update: if request.auth != null && isOwner(resource.data.userId);
      allow create: if request.auth != null && (isOwner(request.resource.data.userId) || isAdmin());
    }

    match /supportTickets/{ticketId} {
      allow read, list, create, update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      
      match /messages/{messageId} {
        allow read, list, create: if request.auth != null && (isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin());
      }
    }
  }
}
