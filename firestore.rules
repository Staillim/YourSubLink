rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user profile.
      // Users can only read/write their own profile.
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Rules for the 'links' collection
    match /links/{linkId} {
      // Anyone can read a link document for redirection purposes.
      allow get: if true;
      // Users can create links. Admins can list all links.
      allow list: if isAdmin();
      // Users can only create/update/delete their own links. Admins can do it for any link.
      allow write: if resource.data.userId == request.auth.uid || isAdmin();
    }
    
    // Rules for the 'clicks' collection
    match /clicks/{clickId} {
      // Anyone can create a click log.
      allow create: if true;
      // Only admins can read the full list of clicks.
      allow read, list: if isAdmin();
    }
    
    // Rules for the 'cpmHistory' collection
    match /cpmHistory/{cpmId} {
      // Only admins can manage CPM history.
      allow read, write: if isAdmin();
    }

    // Rules for the 'payoutRequests' collection
    match /payoutRequests/{requestId} {
       // Users can create their own requests. Admins can read/write all.
       allow create: if request.resource.data.userId == request.auth.uid;
       allow read, list, update: if isOwner(request.resource.data.userId) || isAdmin();
    }
    
    // Rules for the 'chats' collection and 'messages' subcollection
    match /chats/{userId} {
      // An admin can read any chat document. A user can only read their own.
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can list all chats.
      allow list: if isAdmin();
      // A user can create/update their own chat document. An admin can update any.
      allow write: if isOwner(userId) || isAdmin();
      
      // Rules for the 'messages' subcollection
      match /messages/{messageId} {
        // A user can read/write messages in their own chat. An admin can do it in any chat.
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Rules for the 'notifications' collection
    match /notifications/{notificationId} {
      // Users can only read notifications intended for them.
      allow read: if resource.data.userId == request.auth.uid;
      // Admins are the only ones who can create notifications.
      allow create: if isAdmin();
    }
  }
}
