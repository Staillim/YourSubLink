
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // LINKS
    match /links/{linkId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow click increments from anyone, but other updates only by the owner
      allow update: if (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks'])) || 
                      (request.auth != null && resource.data.userId == request.auth.uid);
    }

    // USERS
    match /users/{userId} {
        allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
        allow read: if request.auth != null;
        
        // Admins can list all users
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
        // Allow users to update their own profile, or let admins update any profile
        allow update: if request.auth != null && (
                        (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL'])) ||
                        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
                      );
    }

    // PAYOUT REQUESTS
    match /payoutRequests/{requestId} {
        // User can read their own, Admin can read any
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        
        // Admin can list all requests for notification purposes
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

        // Allow users to create requests if they are authenticated
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

        // Admins can update any payout request (to approve/reject)
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
