rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the links collection
    match /links/{linkId} {
      // Allow public read for redirection.
      allow read: if true;

      // Allow authenticated users to create links, ensuring the userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow authenticated users to delete their own links.
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow authenticated users to update their own links.
      // Anyone can increment the click count (for the public redirect page).
      allow update: if (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks'])) || 
                      (request.auth != null && resource.data.userId == request.auth.uid);
    }
    
    // Rules for the users collection
    match /users/{userId} {
      // Allow authenticated users to read profiles.
      allow read: if request.auth != null;
      
      // Allow users to create their own user document.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own document, but not their role.
      // Allow users with 'admin' role to update any field on any user document, including the role.
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.role == resource.data.role) ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }
  }
}
