rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if a user is the owner of a resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can be created by anyone authenticated.
    // Users can only be read/updated by their owner or an admin.
    // Admins can read all user profiles.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Admins can list all users
    }

    // Links can be created by any authenticated user.
    // Links can only be read/updated by their owner.
    // Links can be read by anyone for redirection purposes.
    // Admins can manage all links.
    match /links/{linkId} {
      allow create: if request.auth != null;
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();

      // Public read for redirection
       match /links/{linkId} {
        allow get: if true;
      }
    }

    // Clicks can be created by anyone.
    // Click history can be read by the link owner or an admin.
    match /clicks/{clickId} {
      allow create: if true;
      allow read, list: if isAdmin() || isOwner(get(/databases/$(database)/documents/links/$(resource.data.linkId)).data.userId);
    }
    
    // Payout requests can be created by the user.
    // They can be read by the user who created them or an admin.
    // Admins can update their status.
    match /payoutRequests/{requestId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin();
      allow list: if isAdmin();
    }
    
    // Notifications can be created by the system (or admins for now).
    // They can only be read by the intended user or an admin.
    match /notifications/{notificationId} {
        allow create: if isAdmin(); // Or a backend process
        allow read: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // CPM History is read-only for admins.
    match /cpmHistory/{cpmId} {
        allow read, list: if isAdmin();
        allow write: if isAdmin();
    }
  }
}
