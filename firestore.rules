rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Links: Publicly readable to get destination URL, but only owner can write.
    match /links/{linkId} {
      allow read: if true;
      allow create, update, delete: if request.auth.uid == resource.data.userId;

      // Clicks subcollection can be written to by anyone, but not read.
      // This is now DEPRECATED in favor of the root /clicks collection.
      match /clicks/{clickId} {
        allow read, write: if false; // Keep this locked down
      }
    }
    
    // Clicks Collection: ANYONE can create a click document. This is essential
    // for anonymous visitors to register their visit. They cannot read, update, or delete.
    match /clicks/{clickId} {
      allow create: if true;
      allow read, update, delete: if false; // Nobody can read/change click logs directly
    }

    // Users: Only the authenticated user can read/write their own document.
    // Admins have special privileges defined below.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Notifications: Only owner can manage their notifications.
    match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    // CPM History: Readable by all authenticated users (for client-side calcs), writable only by admin.
    match /cpmHistory/{historyId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Payout Requests: Readable by owner or admin. Writable only by owner.
    match /payoutRequests/{requestId} {
        allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Support Tickets: Accessible only by the user who created it or an admin.
    match /supportTickets/{ticketId} {
      allow read, create, update: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      match /messages/{messageId} {
        allow read, create: if request.auth.uid == get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }

    // Admin-only access for listing collections
    match /{document=**} {
        // Admins can list users, links, payouts
        allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
