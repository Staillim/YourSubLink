rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USERS Collection
    match /users/{userId} {
      allow get: if true;
      allow list, write: if isAdmin();
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // LINKS Collection
    match /links/{linkId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.userId);

      // CRITICAL FIX: Allow anyone to increment the click counter,
      // while only the owner can perform other updates.
      allow update: if 
        (request.resource.data.diff(resource.data).changedKeys().hasOnly(['clicks']) && request.resource.data.clicks > resource.data.clicks) ||
        isOwner(get(/databases/$(database)/documents/links/$(linkId)).data.userId);

      allow delete: if isOwner(get(/databases/$(database)/documents/links/$(linkId)).data.userId) || isAdmin();
    }

    // CLICKS Collection
    match /clicks/{clickId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // PAYOUT REQUESTS Collection
    match /payoutRequests/{payoutId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow list, get, update: if isAdmin();
      allow delete: if false;
    }

    // NOTIFICATIONS Collection
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    // SUPPORT TICKETS Collection
    match /supportTickets/{ticketId} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
      
      match /messages/{messageId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId) || isAdmin();
      }
    }
    
    // CPM HISTORY Collection
    match /cpmHistory/{historyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}