rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isUserAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read;
      allow create: if isUserAuthenticated(userId);
      allow update: if isUserAuthenticated(userId) || isUserAdmin();
    }

    match /links/{linkId} {
      allow read;
      allow create: if isUserAuthenticated(request.resource.data.userId);
      allow update: if isUserAuthenticated(resource.data.userId) || isUserAdmin();
      allow delete: if isUserAuthenticated(resource.data.userId) || isUserAdmin();
    }

    match /clicks/{clickId} {
      // Any visitor can create a click log.
      allow create: if get(/databases/$(database)/documents/links/$(request.resource.data.linkId)).data.userId != null &&
                      get(/databases/$(database)/documents/users/$(get(/databases/$(database)/documents/links/$(request.resource.data.linkId)).data.userId)).data.accountStatus == 'active';
      // Only admins should be able to update/delete click logs (e.g. for maintenance)
      allow update, delete: if isUserAdmin();
      allow read: if isUserAdmin();
    }
    
    match /cpmHistory/{cpmId} {
      allow read;
      allow list;
      allow create, update, delete: if isUserAdmin();
    }
    
    match /payoutRequests/{payoutId} {
      allow read: if isUserAuthenticated(resource.data.userId) || isUserAdmin();
      allow list: if isUserAdmin();
      allow create: if isUserAuthenticated(request.resource.data.userId);
      allow update: if isUserAdmin();
    }

    match /notifications/{notificationId} {
      allow read, update: if isUserAuthenticated(resource.data.userId);
      allow create: if isUserAuthenticated(request.resource.data.userId) || isUserAdmin();
    }

    match /supportTickets/{ticketId} {
        allow read, create, update: if isUserAuthenticated(request.auth.uid) || isUserAdmin();
        
        match /messages/{messageId} {
             allow read, create, update: if isUserAuthenticated(request.auth.uid) || isUserAdmin();
        }
    }
  }
}
